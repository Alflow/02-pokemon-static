---

import PokemonCard from "@components/pokemons/PokemonCard.astro"
import MainLayout from "../Layouts/MainLayout.astro"

const response = await fetch('https://pokeapi.co/api/v2/pokemon?limit=151');
import type {PokemonListResponse} from "../interfaces/pokemon-list.response";
const data = (await response.json()) as PokemonListResponse;

console.log(data);

---
<MainLayout title="Inicio">
	<h1 class="text-3xl text-[#FFBA08] mb-5">Listado de pokemons</h1>
	<ul class="text-[#fafafa] grid grid-cols-2 md:grid-cols-6 gap-4">
		{data.results.map((pokemon, url)=>
		<PokemonCard name={pokemon.name} img_url={pokemon.url}></PokemonCard>
		)}
	</ul>
</MainLayout>